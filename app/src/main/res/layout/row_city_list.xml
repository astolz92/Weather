<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:hint="@string/city_name_label"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/city_zipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/city_name"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:hint="@string/zipcode_label" />


    <TextView
        android:id="@+id/city_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/city_zipcode"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:hint="@string/conditions_label" />

    <TextView
        android:id="@+id/city_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:hint="@string/temperature_label"
        android:textSize="40sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/city_conditions"
        android:background="#000000" />

</RelativeLayout>